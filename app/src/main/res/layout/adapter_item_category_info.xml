<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/dateTime"
            android:layout_alignTop="@+id/sumOfOperation"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#000" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageSomethingChange"
            android:src="@mipmap/ic_action_refresh"
            android:background="#fff"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Some text! It is a simple comment. Some text! It is a simple comment.  Some text! It is a simple comment.  Some text! It is a simple comment. Some text! It is a simple comment. "
            android:id="@+id/comment"
            android:layout_below="@+id/imageSomethingChange"
            android:layout_toRightOf="@+id/checkImage"
            android:layout_toEndOf="@+id/checkImage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:id="@+id/sumOfOperation"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/imageSomethingChange"
            android:layout_toStartOf="@+id/imageSomethingChange"
            android:layout_marginRight="10dp"
            android:textColor="#000" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:id="@+id/checkImage"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</LinearLayout>