<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:elevation="1dp">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onButtonAddConsumptionClick"
        android:id="@+id/add_consumption_button"
        android:src="@mipmap/plus"
        android:background="@drawable/shape_oval_red"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/separator1"
        android:layout_alignEnd="@+id/separator1"
        android:padding="5dp"
        android:elevation="5dp"
        android:adjustViewBounds="false"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Ваши расходы"
        android:background="@drawable/rectangle_rounded_all_red"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/currency1"
        android:layout_alignLeft="@+id/separator1"
        android:layout_alignStart="@+id/separator1"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="#ffffff" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="грн"
        android:id="@+id/currency1"
        android:layout_toLeftOf="@+id/add_consumption_button"
        android:layout_toStartOf="@+id/add_consumption_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="За сегодня"
        android:id="@+id/today_consumption_text"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0,00"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#6f6f6f"
        android:id="@+id/consumption_balance_today"
        android:layout_alignBaseline="@+id/today_consumption_text"
        android:layout_alignBottom="@+id/today_consumption_text"
        android:layout_toLeftOf="@+id/add_consumption_button"
        android:layout_toStartOf="@+id/add_consumption_button" />
    <View
        android:layout_width="wrap_content"
        android:background="@drawable/separator_grey"
        android:layout_height="2dp"
        android:id="@+id/separator2"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_below="@+id/add_consumption_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/add_consumption_button"
        android:layout_toStartOf="@+id/add_consumption_button" />

    <View
        android:layout_width="wrap_content"
        android:background="@drawable/separator_green"
        android:layout_height="2dp"
        android:id="@+id/separator1"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_below="@+id/consumption_balance_month"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="За неделю"
        android:id="@+id/week_consumption_text"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="грн"
        android:id="@+id/textView10"
        android:layout_below="@+id/separator2"
        android:layout_alignRight="@+id/consumption_balance_today"
        android:layout_alignEnd="@+id/consumption_balance_today" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0,00"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#6f6f6f"
        android:id="@+id/consumption_balance_week"
        android:layout_below="@+id/textView10"
        android:layout_alignRight="@+id/textView10"
        android:layout_alignEnd="@+id/textView10" />

    <View
        android:layout_width="wrap_content"
        android:background="@drawable/separator_grey"
        android:layout_height="2dp"
        android:id="@+id/separator3"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_below="@+id/consumption_balance_week"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/add_consumption_button"
        android:layout_toStartOf="@+id/add_consumption_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="За месяц"
        android:id="@+id/month_consumption_text"
        android:layout_below="@+id/textView13"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="грн"
        android:id="@+id/textView13"
        android:layout_below="@+id/separator3"
        android:layout_alignRight="@+id/consumption_balance_today"
        android:layout_alignEnd="@+id/consumption_balance_today" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0,00"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#6f6f6f"
        android:id="@+id/consumption_balance_month"
        android:layout_below="@+id/textView13"
        android:layout_alignRight="@+id/textView13"
        android:layout_alignEnd="@+id/textView13" />
</RelativeLayout>