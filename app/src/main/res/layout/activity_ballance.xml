                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_border_bottom_grey"
                    android:layout_marginTop="5dp"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Октябрь"
                        android:layout_weight=".5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="0.00"
                        android:id="@+id/month10"
                        android:layout_weight=".5"
                        android:gravity="right" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_border_bottom_grey"
                    android:layout_marginTop="5dp"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Ноябрь"
                        android:layout_weight=".5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="0.00"
                        android:id="@+id/month11"
                        android:layout_weight=".5"
                        android:gravity="right" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_border_bottom_grey"
                    android:layout_marginTop="5dp"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Декабрь"
                        android:layout_weight=".5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="0.00"
                        android:id="@+id/month12"
                        android:layout_weight=".5"
                        android:gravity="right" />
                </TableRow>

            </TableLayout>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:id="@+id/imageButton"
                android:background="#ffffff"
                android:src="@mipmap/ic_arrow_right"
                android:layout_alignBottom="@+id/currentNumberOfYear"
                android:layout_toRightOf="@+id/currentNumberOfYear"
                android:layout_toEndOf="@+id/currentNumberOfYear"
                android:onClick="onButtonNextYearClick"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:id="@+id/imageButton2"
                android:src="@mipmap/ic_arrow_left"
                android:background="#ffffff"
                android:layout_above="@+id/tableLayout"
                android:layout_toLeftOf="@+id/currentNumberOfYear"
                android:layout_toStartOf="@+id/currentNumberOfYear"
                android:onClick="onButtonPrevYearClick"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
